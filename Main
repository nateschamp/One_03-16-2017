<p>Are you a male or female...or something else?</p>

<select onchange="myGender(this.value);">
  <option value=" "> </option>
  <option value="male">Male</option>
  <option value="female">Female</option>
  <option value="other">Other</option>
</select>
<script>
function myGender(val) {
    
    if (val != "other"){
    	document.write("You are a " + val);
    }else{
    	document.write("Well, whatever you are..");
	}
}
</script>

